{
    "name": "move-language",
    "version": "1.0.0",
    "description": "Move/mvir IDE for VSCode",
    "publisher": "PontemNetwork",
    "displayName": "Move Language",
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "scripts": {
        "vscode:prepublish": "rm bin/*; npm run compile",
        "tree-sitter": "tree-sitter build-wasm ./node_modules/@movei/tree-sitter-move",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "prepare": "husky install",
        "prettier": "prettier --write src/ package.json"
    },
    "dependencies": {
        "node-fetch": "^2.6.1",
        "npm": "^7.8.0",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0",
        "vscode-languageserver-protocol": "^3.16.0",
        "vscode-languageserver-textdocument": "^1.0.1",
        "vscode-languageserver-types": "^3.16.0",
        "web-tree-sitter": "^0.16.4"
    },
    "devDependencies": {
        "@movei/tree-sitter-move": "github:move-hub/tree-sitter-move",
        "@types/node": "^14.14.0",
        "@types/node-fetch": "^2.5.9",
        "@types/vscode": "^1.55.0",
        "husky": "^6.0.0",
        "prettier": "2.2.1",
        "pretty-quick": "^3.1.0",
        "tree-sitter-cli": "^0.16.9",
        "typescript": "^4.2.3"
    },
    "engines": {
        "vscode": "^1.55.0"
    },
    "activationEvents": [
        "onLanguage:mvir",
        "onLanguage:move",
        "workspaceContains:**/Dove.toml"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "taskDefinitions": [
            {
                "type": "dove",
                "required": [
                    "command"
                ],
                "properties": {
                    "label": {
                        "type": "string"
                    },
                    "command": {
                        "type": "string"
                    },
                    "args": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "move.reload",
                "when": "resourceLangId == move",
                "title": "Restart move-language-server",
                "category": "Move"
            }
        ],
        "languages": [
            {
                "id": "move",
                "aliases": [
                    "Move",
                    "LibraMove",
                    "Libra",
                    "Diem",
                    "DiemMove"
                ],
                "extensions": [
                    ".move"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "mvir",
                "aliases": [
                    "MVIR",
                    "mvir",
                    "Move IR"
                ],
                "extensions": [
                    ".mvir"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "move",
                "scopeName": "source.move",
                "path": "./syntaxes/move.tmLanguage.json"
            },
            {
                "language": "mvir",
                "scopeName": "source.mvir",
                "path": "./syntaxes/mvir.tmLanguage.json"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "move.build",
                    "when": "editorLangId == move"
                },
                {
                    "command": "move.test",
                    "when": "editorLangId == move"
                }
            ]
        },
        "configuration": {
            "title": "Move Language",
            "properties": {
                "move.autocomplete": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable autocompletion feature"
                },
                "move.blockchain": {
                    "type": "string",
                    "enum": [
                        "libra",
                        "dfinance",
                        "diem"
                    ],
                    "default": "Diem",
                    "description": "Move compiler and dialect to use: Dfinance or Diem",
                    "scope": "resource"
                },
                "move.account": {
                    "type": "string",
                    "default": "",
                    "description": "Default account to use when compiling. If not set prompt will be shown on compile command"
                },
                "move.showModal": {
                    "type": "boolean",
                    "description": "Show notifications in modal window",
                    "default": true
                },
                "move.languageServerPath": {
                    "type": "string",
                    "default": "",
                    "description": "Custom path to Move Language Server binary"
                },
                "move.doveExecutablePath": {
                    "type": "string",
                    "default": "",
                    "description": "Custom path to Dove executable"
                }
            }
        }
    },
    "icon": "img/logo.256.png",
    "galleryBanner": {
        "color": "#FFFFFF",
        "theme": "light"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/pontem-network/vscode-move-ide.git"
    },
    "keywords": [
        "libra",
        "move",
        "dfinance",
        "pontem",
        "move language",
        "ide",
        "move ide",
        "move-ide",
        "libra-ide",
        "dfinance-ide",
        "diem",
        "diem-ide"
    ],
    "author": "Pontem Network <support@pontem.network>",
    "license": "Apache License 2.0",
    "bugs": {
        "url": "https://github.com/pontem-network/vscode-move-ide/issues"
    },
    "homepage": "https://github.com/pontem-network/vscode-move-ide/tree/release-0.4#readme",
    "__metadata": {
        "id": "7a08f3ad-eba4-44de-bca1-e41d38b68a5c",
        "publisherDisplayName": "Damir Shamanaev",
        "publisherId": "a21ee11b-2c64-42b1-a3d1-78e5ee8191a6"
    }
}
