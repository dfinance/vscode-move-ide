{
	"name": "move-ide",
	"version": "0.1.6",
	"description": "Move/mvir IDE for VSCode",
	"publisher": "damirka",
	"displayName": "Move IDE",
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"scripts": {
		"postinstall": "./move-ls-loader"
	},
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:mvir",
		"onLanguage:move"
	],
	"main": "./extension.js",
	"contributes": {
		"languages": [
			{
				"id": "move",
				"aliases": ["Move", "LibraMove"],
				"extensions": [".move"],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "mvir",
				"aliases": ["MVIR", "mvir", "Move IR"],
				"extensions": [".mvir"],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "move",
				"scopeName": "source.move",
				"path": "./syntaxes/move.tmLanguage.json"
			},
			{
				"language": "mvir",
				"scopeName": "source.mvir",
				"path": "./syntaxes/mvir.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "extension.compile",
				"title": "Move: Compile"
			}
		],
		"configuration":{
			"title": "Move IDE",
			"properties": {
				"move.configPath": {
					"type": "string",
					"default": "/.mvconfig.json",
					"description": "When set and file is present, json configuration will be used instead of editor config"
				},
				"move.network": {
					"type": "string",
					"enum": [
						"libra (unsupported)",
						"dfinance"
					],
					"default": "dfinance",
					"description": "Infrastructure (Move version) to use: Dfinance or Libra (unsupported)",
					"scope": "resource"
				},
				"move.compilerDir": {
					"type": "string",
					"default": "./out",
					"description": "Relative path inside working directory to put compiled files into"
				},
				"move.defaultAccount": {
					"type": "string",
					"default": "",
					"description": "Default account to use when compiling. If not set prompt will be shown on compile command"
				},
				"move.compilerUrl": {
					"type": "string",
					"default": "http://127.0.0.1:50053",
					"description": "Compiler URL. Soon will be testnet by default"
				},
				"move.showModal": {
					"type": "boolean",
					"description": "Show notifications in modal window",
					"default": true
				},
				"move.dialect": {
					"type": "string",
					"description": "Move Language dialect",
					"default": "libra",
					"enum": ["libra", "dfinance"],
					"enumDescriptions": [
						"Native Libra dialect",
						"dfinance custom dialect (bech32 addresses, strings)"
					]
				}
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/damirka/vscode-move-ide.git"
	},
	"keywords": [
		"libra",
		"move",
		"dfinance",
		"ide",
		"move-ide",
		"libra-ide",
		"dfinance-ide"
	],
	"author": "Damir Shamanaev <damirka.ru@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/damirka/vscode-move-ide/issues"
	},
	"homepage": "https://github.com/damirka/vscode-move-ide#readme",
	"devDependencies": {
		"@types/vscode": "^1.43.0"
	},
	"__metadata": {
		"id": "7a08f3ad-eba4-44de-bca1-e41d38b68a5c",
		"publisherDisplayName": "Damir Shamanaev",
		"publisherId": "a21ee11b-2c64-42b1-a3d1-78e5ee8191a6"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	},
	"move-ls": {
		"version": "v0.1.0",
		"repository": "dfinance/move-language-server"
	}
}
