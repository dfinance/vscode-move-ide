{
    "scopeName": "source.move.spec",
    "repository": {
        "block": {
            "begin": "{",
            "end": "}"
        },
        "keywords": {
            "match": "\\b(pragma|native|ensures|requires|invariant|apply|define|aborts_if)\\b",
            "name": "keyword.control.move.spec"
        },
        "fun_call": {
            "match": "\\b(\\w+)\\(",
            "captures": {
                "1": { "name": "entity.name.function.call.move" }
            }
        }
    },
    "patterns": [
        { "include": "#block" },
        { "include": "#keywords" },
        { "include": "#fun_call" }
    ]
}
